<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/quizgame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="@string/info"
            android:textColor="#fafafa"
            android:textSize="20sp"
            android:textStyle="bold|italic" />
        
        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/quizgame"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Q1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/q1EditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/editText"
                android:inputType="textCapWords" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/Q2"
                android:textSize="18sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/q2r1_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="@string/a1q2"
                android:textColor="#ff5252"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/q2r2_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="@string/a2q2"
                android:textColor="#1976D2"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/q2r3_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="@string/a3q2"
                android:textColor="#ffeb3b"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/q2r4_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:text="@string/a4q2"
                android:textColor="#4caf50"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/Q3"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/q3r1_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:text="@string/a1q3"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/q3r2_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:text="@string/a2q3"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/q3r3_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="24dp"
                        android:text="@string/a3q3"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/q3r4_checkbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:paddingLeft="24dp"
                        android:text="@string/a4q3"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/Q4"
                android:textSize="18sp"
                android:textStyle="bold" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_q4a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a1q4" />

                <RadioButton
                    android:id="@+id/radio_q4a2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a2q4" />

                <RadioButton
                    android:id="@+id/radio_q4a3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a3q4" />

                <RadioButton
                    android:id="@+id/radio_q4a4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a4q4" />

            </RadioGroup>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/Q5"
                android:textSize="18sp"
                android:textStyle="bold" />


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radio_q5a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a1q5" />

                <RadioButton
                    android:id="@+id/radio_q5a2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a2q5" />

                <RadioButton
                    android:id="@+id/radio_q5a3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a3q5" />

                <RadioButton
                    android:id="@+id/radio_q5a4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a4q5" />

                <RadioButton
                    android:id="@+id/radio_q5a5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a5q5" />

                <RadioButton
                    android:id="@+id/radio_q5a6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a6q5" />

                <RadioButton
                    android:id="@+id/radio_q5a7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/a7q5" />
            </RadioGroup>

            <Button
                android:id="@+id/button_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:onClick="submitScore"
                android:text="@string/button" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>